{
    "name": "crazycat/instance",
    "description": "Instance (minimum) of CrazyCat platform",
    "type": "project",
    "license": [
        "proprietary"
    ],
    "authors": [
        {
            "name": "Bruce Z",
            "email": "zengliwei@163.com",
            "homepage": "http://crazy-cat.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">5.6.0",
        "crazycat/framework": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "": "app/modules"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "CrazyCat\\Framework\\App\\Setup\\Wizard::install",
            "php index.php"
        ],
        "post-package-install": [
            "php index.php system:cache:clear"
        ],
        "post-package-update": [
            "php index.php system:cache:clear"
        ],
        "post-package-uninstall": [
            "php index.php system:cache:clear"
        ]
    }
}